@model CarDetailViewModel
@{
    ViewData["Title"] = Model.Arac.Marka.Adi + " " + Model.Arac.Modeli + " " + Model.Arac.KasaTipi;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/Img//Cars/@Model.Arac.Resim1" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/Img//Cars/@Model.Arac.Resim2" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/Img//Cars/@Model.Arac.Resim3" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="small mb-1"></div>
                <h1 class="display-5 fw-bolder">@ViewData["Title"]</h1>
                <div class="fs-5">
                    <span>Fiyatı : @Model.Arac.Fiyati ₺</span>
                </div>
                <div class="fs-5">
                    <span>Renk : @Model.Arac.Renk</span>
                </div>
                <div class="fs-5">
                    <span>Model Yılı : @Model.Arac.ModelYili</span>
                </div>
                <p class="lead">@Model.Arac.Notlar</p>
                <div class="d-flex">
                    <button class="btn btn-outline-dark flex-shrink-0" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <i class="bi-cart-fill me-1"></i>
                        Bilgi Al
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="Musteri" model="Model.Musteri" />